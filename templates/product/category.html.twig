{% extends 'base.html.twig' %}

{% block title %}Catégorie: {{ category.name }}{% endblock %}

{% block body %}

    {#https://bootswatch.com/sketchy/ -> breadcrumb#}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ category.name }}</li>
    </ol>

    <h3><small class="text-muted">Catégorie: {{ category.name }}</small></h3>

    <h1>Nos produits phares</h1>
    <div class="row">
        {% for p in category.products %}
            <div class="col-3">
                <div class="card">
                    <img src="{{ p.mainPicture }}" alt="Image de {{ p.name }}" class="img-fluid">
                    <div class="card-body">
                        <h4 class="card-title">{{ p.name }} ({{ p.price / 1000 }}€)</h4>
                        <span class="badge badge-secondary">{{ category.name }}</span>
                        <p class="card-text">{{ p.shortDescription }}</p>
                        <a href="#" class="btn btn-outline-info">Détails</a>
                        <a href="#" class="btn btn-outline-success">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}