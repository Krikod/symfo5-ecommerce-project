{% extends 'base.html.twig' %}

{% block title %}Catégorie: {{ category.name }}{% endblock %}

{% block body %}

    {#https://bootswatch.com/sketchy/ -> breadcrumb#}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{ category.name }} ({{ nb_products }})</li>
    </ol>

    <h3><small class="text-muted">Catégorie: {{ category.name }}</small></h3>

    <h1>Nos produits phares</h1>
    <div class="row">

        {% for p in category.products %}
            <div class="col-lg-3 col-md-6">
                {% for image in p.images %}
                    {%  if loop.first %}
                        <div>
                            <img src="{{ asset('/uploads/'~ image.name) }}" width="400" alt="Image de {{ p.name }}"
                                 class="img-fluid d-block mb-2 img-thumbnail">
                        </div>
                    {%  endif %}
                {% endfor %}
                {% include 'product/_product_card.html.twig' %}
            </div>
        {% endfor %}

        {#{% for p in category.products %}#}
            {#<div class="col-3">#}
               {#{% include 'product/_product_card.html.twig' %}#}
            {#</div>#}
        {#{% endfor %}#}
    </div>

{% endblock %}