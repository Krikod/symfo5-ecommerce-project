{% extends 'base.html.twig' %}

{% block title %}Editer la catégorie {{ category.name }}{% endblock %}

{% block body %}

    <h1>Editer la catégorie {{ category.name }}</h1>

    {% form_theme formView 'form/_my_form_style.html.twig' %}

    {{ form_start(formView) }}
    {{ form_errors(formView) }}

    <div class="row">
        <div class="col-4">
            {{ form_row(formView.name) }}
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save fa-lg"></i>
                Editer
            </button>
        </div>
    </div>

    {{ form_end(formView) }}

{% endblock %}